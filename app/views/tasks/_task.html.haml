%div.card
  %div.card-body
    %div.d-flex.justify-content-between.flex-row
      %h5.card-title.align-self-start
        = task.title
      -if current_user.id == task.user.id
        .dropdown
          %a#dropdownMenuLink.btn.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
          .dropdown-menu.dropdown-menu-right{"aria-labelledby" => "dropdownMenuLink"}
            = link_to edit_task_path(task), class: "dropdown-item" do
              Edit
            = link_to task, method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item" do
              Delete
    %p.card-text= task.description
    %footer.blockquote-footer
      by
      %cite{:title => task.user.email}= task.user.email