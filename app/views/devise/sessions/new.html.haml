
%div.container
  %div.row.justify-content-center
    %div.col-4.align-self-center
      %div.card.login-panel
        %div.card-body
          %h2 Log in
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            %div.form-group
              = f.label :email
              = f.email_field :email, autofocus: true, class: 'form-control', autocomplete: "email"
              %small.form-text.text-muted We'll never share your email with anyone
            .field
              = f.label :password
              %br/
              = f.password_field :password, class: 'form-control', autocomplete: "current-password"
            - if devise_mapping.rememberable?
              .field
                = f.check_box :remember_me
                = f.label :remember_me
            .actions
              = f.submit "Log in", class: 'btn btn-primary full-width'
          = render "devise/shared/links"
