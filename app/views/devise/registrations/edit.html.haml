

%div.container
  %div.row.justify-content-center
    %div.col-md-5.align-self-center
      %div.card.edit-profile-card
        %div.card-body
          %h2
            Edit #{resource_name.to_s.humanize}
          = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
            = render "devise/shared/error_messages", resource: resource
            .field
              = f.label :email
              %br/
              = f.email_field :email, autofocus: true, class: 'form-control', autocomplete: "email"
            - if devise_mapping.confirmable? && resource.pending_reconfirmation?
              %div
                Currently waiting confirmation for: #{resource.unconfirmed_email}
            .field
              = f.label :password
              %i.text-muted (leave blank if you don't want to change it)
              %br/
              = f.password_field :password, class: 'form-control', autocomplete: "new-password"
              - if @minimum_password_length
                %small.form-text.text-muted
                  = @minimum_password_length
                  characters minimum
            .field
              = f.label :password_confirmation
              %br/
              = f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password"
            .field
              = f.label :current_password
              %i.text-muted (we need your current password to confirm your changes)
              %br/
              = f.password_field :current_password, class: 'form-control', autocomplete: "current-password"
            .actions
              = f.submit "Update", class: "btn btn-primary full-width"
      %div.card.edit-profile-card
        %div.card-body
          %h3 Cancel my account
          = link_to "Cancel", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger full-width"
      = link_to "Back", :back
