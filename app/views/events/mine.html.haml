%div  
  %div.container.events-container
    %div.d-flex.justify-content-between.flex-row
      %h1.margin-bottom-none= I18n.t('event.mine.title')
      = link_to new_event_path do
        %i.material-icons.md-48 add
    %div.border-top.my-2
    %div.card-columns
      = render @events
    - if @events.length == 0
      %div.text-center
        %p.text-muted 
          = I18n.t('event.common.no_events')
          %br/
          = I18n.t('event.common.add_some')
