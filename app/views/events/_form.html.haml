
%div.card
  %div.card-body
    = form_for @event do |f|
      - if @event.errors.any?
        #error_explanation
          %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
          %ul
            - @event.errors.full_messages.each do |message|
              %li= message
      .field
        = f.label :title
        = f.text_field :title, class: 'form-control'
      .field
        = f.label :location
        = f.text_area :location, class: 'form-control'
      .field
        = f.label :date
        = f.date_select :date, :start_year => Date.current.year
      .field
        = f.label :description
        = f.text_area :description, class: 'form-control'
      .actions
        = f.submit 'Save', class: "btn btn-primary full-width"
